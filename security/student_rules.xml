<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Students can see only their own results -->
    <record id="rule_student_result_own" model="ir.rule">
        <field name="name">Student: Own Results Only</field>
        <field name="model_id" ref="model_student_result"/>
        <field name="domain_force">[('student_id.user_id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('kibabii_university_erp.group_student'))]"/>
    </record>

    <!-- Students can see only their own fees -->
    <record id="rule_student_fee_own" model="ir.rule">
        <field name="name">Student: Own Fees Only</field>
        <field name="model_id" ref="model_university_fee"/>
        <field name="domain_force">[('student_id.user_id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('kibabii_university_erp.group_student'))]"/>
    </record>


</odoo>