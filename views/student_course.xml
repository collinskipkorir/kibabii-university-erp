<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- List View -->
    <record id="view_university_course_list" model="ir.ui.view">
        <field name="name">university.course.list</field>
        <field name="model">university.course</field>
        <field name="arch" type="xml">
            <list string="University Courses">
                <field name="code"/>
                <field name="name"/>
                <field name="department_id"/>
                <field name="credit_units"/>
                <field name="total_students"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_university_course_form" model="ir.ui.view">
        <field name="name">university.course.form</field>
        <field name="model">university.course</field>
        <field name="arch" type="xml">
            <form string="University Course">
                <sheet>
                    <group>
                        <field name="code" readonly="1"/>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="credit_units"/>
                        <field name="active"/>
                    </group>
                    <group string="Relations">
                        <field name="university_id"/>
                        <field name="department_id"/>
                        <field name="student_ids" widget="many2many_tags" readonly="1"/>
                        <field name="result_ids" readonly="1"/>
                        <field name="total_students" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_university_course_search" model="ir.ui.view">
        <field name="name">university.course.search</field>
        <field name="model">university.course</field>
        <field name="arch" type="xml">
            <search string="University Course Search">
                <field name="code"/>
                <field name="name"/>
                <field name="department_id"/>
                <field name="university_id"/>
                <filter name="active" string="Active" domain="[('active','=',True)]"/>
                <filter name="inactive" string="Inactive" domain="[('active','=',False)]"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_university_course" model="ir.actions.act_window">
        <field name="name">University Courses</field>
        <field name="res_model">university.course</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_university_course_search"/>
    </record>

    <!-- Menu Items -->
    <!--<menuitem id="menu_university_course_root" name="Courses" parent="base.menu_university_root"/>-->
   <!-- <menuitem id="menu_university_course" name="Manage Courses" parent="menu_university_course_root" action="action_university_course"/>-->

</odoo>