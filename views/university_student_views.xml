<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- List View -->
    <record id="view_university_student_list" model="ir.ui.view">
        <field name="name">student.university.list</field>
        <field name="model">student.university</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="registration_number"/>
                <field name="email"/>
                <field name="phone_number"/>
                <field name="date_of_admission"/>
                <field name="university_id"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_university_student_form" model="ir.ui.view">
        <field name="name">student.university.form</field>
        <field name="model">student.university</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="registration_number"/>
                        </group>
                        <group>
                            <field name="email"/>
                            <field name="phone_number"/>
                        </group>
                    </group>
                    <group>
                        <field name="date_of_admission"/>
                    </group>
                    <group>
                        <field name="university_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_university_student" model="ir.actions.act_window">
        <field name="name">University Students</field>
        <field name="res_model">student.university</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
