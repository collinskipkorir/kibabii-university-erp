<odoo>

    <!-- =========================
         List View
    ========================== -->
    <record id="view_student_result_list" model="ir.ui.view">
        <field name="name">student.result.list</field>
        <field name="model">student.result</field>
        <field name="arch" type="xml">
            <list string="Student Results">
                <field name="student_id"/>
                <field name="course_id"/>
                <field name="marks"/>
                <field name="credit_units"/>
                <field name="grade"/>
                <field name="grade_point"/>
                <field name="status"/>
            </list>
        </field>
    </record>


    <!-- =========================
         Form View
    ========================== -->
    <record id="view_student_result_form" model="ir.ui.view">
        <field name="name">student.result.form</field>
        <field name="model">student.result</field>
        <field name="arch" type="xml">
            <form string="Student Result">

                <sheet>

                    <group>
                        <group>
                            <field name="student_id"/>
                            <field name="course_id"/>
                            <field name="university_id"/>
                        </group>

                        <group>
                            <field name="marks"/>
                            <field name="credit_units"/>
                        </group>
                    </group>

                    <group string="Computed Grade Information">
                        <field name="grade" readonly="1"/>
                        <field name="grade_point" readonly="1"/>
                        <field name="status" readonly="1"/>
                    </group>

                </sheet>

                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>


            </form>
        </field>
    </record>


    <!-- =========================
         Action
    ========================== -->
    <record id="action_student_result" model="ir.actions.act_window">
        <field name="name">Student Results</field>
        <field name="res_model">student.result</field>
        <field name="view_mode">list,form</field>
    </record>


    <!-- =========================
         Menu
    ========================== -->
    <menuitem
            id="menu_student_results"
            name="Student Results"
            parent="menu_university_management"
            action="action_student_result"
            sequence="3"
    />

</odoo>